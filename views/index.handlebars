<h1 class="jumbotron">BURGER</h1>

<h2>Burgers that haven't been eaten yet</h2>

<ul>
  {{#each burger}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">omnomnomnomn</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that have been eaten</h2>

<ul>
  {{#each burger}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST" class="form-group">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">Buy this Burger again</button>
        </form>
        <form action="/{{this.id}}" method="DELETE" class="form-group">
          <button type="submit">I don't like this burger anymore</button>
        </form>
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <div class="form-group">
    <label for="slee">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!!<br>
    <input type="radio" name="devoured" value="0"> Still here
  </div>

  <button type="submit">Add Burger</button>
</form>
